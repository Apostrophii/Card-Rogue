doctype html
html
    head
        include ./includes/head
        style
            include /javascripts/jquery-ui-slider-pips.css
        script
            include /javascripts/jquery-ui-slider.pips.js
        script.
            $(document).ready(function() {
                $('form').submit(function(){
                    if ($('#lobby_name').val() !== '') {
                        var capacity = $('.slider').slider("option", "value");
                        socket.emit('make_lobby', {lobby_name: $('#lobby_name').val(), lobby_pwd: $('#lobby_pwd').val(), capacity: capacity});
                        window.location.replace("lobby");
                    }
                    return false;
                });
                $(".slider").slider({
                    min: 1,
                    max: 6,
                    step: 1,
                    value: 4,
                }).slider("pips", {
                    rest: 'label',
                });
            });
        style
            include ./css/general.css
    body
        h1.title Create New Game
        form(action='')
            label(for='lobby_name') name
            br
            input#lobby_name(placeholder='' autocomplete='off' autofocus='true')
            br
            br
            label(for='lobby_pwd') password
            br
            input#lobby_pwd(placeholder='(optional)' autocomplete='off')
            br
            br
            div max players
            br
            div.slider
            br
            button#create_game CREATE!
